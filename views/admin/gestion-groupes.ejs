<%- include('header_admin') %>

    <section id="banner" class="section-p">
        <h1>Tous les Groupes</h1>
        <a href="/gestion-des-groupes?action=nouveau-groupe"><i class="fa-solid fa-users-rectangle"></i> Ajouter un groupe</a>
    </section>
    <% if(groupes == "") { %> 
        <section id="empty" class="section-p">
            <img src="img/noresult.jpg" alt="" >
            <h1>Aucun groupe n'a été enrégistré (0)</h1>
        </section>
    <% } else{ %> 
        <section id="student" class="section-p model">
            <div class="student-filter">
                <h2><i class="fa-solid fa-filter"></i>Trier par</h2>
                <p><i class="fa-solid fa-arrow-up-a-z"></i>ordre</p>    
            </div>
    
            <div class="student-card">
                <% groupes.forEach((groupe) => { %> 
                    <div class="student-box">
                        <p> <i class="fa-solid fa-users-rectangle"></i> <%= groupe.libelle %></p>
                        <div class="student-option">
                            <a href="/gestion-des-groupes?action=maj-groupe&id=<%= groupe._id %>"><i class="fa-solid fa-pen-to-square"></i> </a>
                        </div>
                    </div>
                    
                <% }) %>
               
            </div>
           
          
        </section>
    
    <% } %>

   

 
   
<%- include('../layout/footer') %>