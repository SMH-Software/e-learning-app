<%- include('header_admin') %>

   
    <section id="banner" class="section-p">
        <% if(title == "filiere") { %> 
            <h1>Mise à jour d'une filière</h1>
        <% } else if(title == "classe") { %> 
            <h1>Mise à jour d'une classe</h1>
        <% } else if(title == "module") { %> 
            <h1>Mise à jour d'un module</h1>
        <% } %>
        
    </section>

   
    <section id="add_formulaire" class="section-p">
        <form action="/update_content" method="post">
            <div class="row">
                <div class="col-md-12">
                    <input type="text" id="libelle" name="libelle"  class="form-control" placeholder="Libelle *" required value="<%= content.libelle %>">
                    <input type="text" name="title" value="<%= title %>" hidden>
                    <input type="text" name="id" value="<%= content._id %>" hidden>
                </div>
               
            </div>
           
            <div class="form-btn">
                <button class="normal">enrégistrer les modification</button>
            </div>
            

        </form>
   </section>
   

   

   
