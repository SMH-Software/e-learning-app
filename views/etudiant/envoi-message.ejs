<%- include('header_etudiant') %>

   
    <section id="banner" class="section-p">
        <h1>Envoyer un message</h1>
    </section>

    <section id="new-course" class="section-p">
        <form action="/send_message" method="post">  
            <input type="text" name="objet" placeholder="Objet *" required>
            <input type="text" name="destinataire" value="<%= destinataire %>" hidden>
            <textarea name="message" id="" cols="30" rows="5" placeholder="Votre message *"></textarea>
            
            <button class="normal">Envoyer maintenant</button>
        </form>
    </section>


    <% if(locals.message) { %>
        <script>
            const success = '<%= success %>'
            Swal.fire({
                icon: 'success',
                text: message,
                timer: 5000
            })
        </script>
    <%}%>
<%- include('../layout/footer') %>